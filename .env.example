# Database Configuration
# Required for persistent message storage and data across server restarts
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Session Secret (required for authentication)
SESSION_SECRET=your-random-secret-key-here

# AWS S3 Configuration (optional - for image uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# OpenAI API (optional - for AI features)
OPENAI_API_KEY=your-openai-api-key

# Force Exercise Generation (optional - only when building exercise library)
FORCE_EXERCISE_GENERATION=false
